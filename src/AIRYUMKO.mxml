			public function new_modulo_add():void
			{
				enabled_componente(false);
				Modulo_name.text='';
				dataset.dataProvider={};
			}         
			////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
			public function enabled_componente(estado:Boolean):void
			{
				if(estado){
					Modulo_name.enabled=false;
					btn_crear_modulo.enabled=false;
				}else{
